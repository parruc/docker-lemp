version: '2'
services:
  db:
    image: mariadb:latest
    volumes:
      - "./db:/var/lib/mysql"
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: {{dbrootpassword}}
      MYSQL_DATABASE: {{dbname}}
      MYSQL_USER: {{dbuser}}
      MYSQL_PASSWORD: {{dbpassword}}

  php{{phpversion}}:
    depends_on:
      - db
    build:
      context: .
      dockerfile: config/php.dockerfile
    image: php:fpm
    volumes:
      - ./www:/www
      - ./config/php.override.ini:/usr/local/etc/php/conf.d/override.ini
    restart: always

  web:
    depends_on:
      - php{{phpversion}}
    image: nginx:latest
    ports:
      - "127.0.0.1:{{port}}:80"
    volumes:
      - ./www:/www
      - ./config/nginx.internal.conf:/etc/nginx/conf.d/default.conf
    restart: always
